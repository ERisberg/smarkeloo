{
  "compilerOptions": {
      "target": "ES2022",
      "module": "ES2022",
      "moduleResolution": "bundler",
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "lib": ["ES2022", "DOM"],
      "outDir": "./dist",
      "declaration": true,
      "isolatedModules": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}

